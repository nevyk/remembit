{
  "name": "remembit",
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "dev-functions": "pnpm run --dir functions build -w",
    "dev-emulators": "firebase emulators:start",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .js,.vue,.ts --fix src",
    "release": "semantic-release",
    "test": "jest --forceExit --detectOpenHandles --silent",
    "test-ci": "firebase emulators:exec --only firestore 'pnpm run test'"
  },
  "dependencies": {
    "@capacitor/app": "1.1.1",
    "@capacitor/core": "^3.6.0",
    "@capacitor/haptics": "1.1.4",
    "@capacitor/keyboard": "1.2.3",
    "@capacitor/status-bar": "1.0.8",
    "@ionic/vue": "^6.0.9",
    "@ionic/vue-router": "^6.0.9",
    "firebase": "^9.6.10",
    "just-clone": "^5.0.1",
    "just-merge": "^3.0.1",
    "just-pick": "^4.0.1",
    "pinia": "^2.0.11",
    "vee-validate": "^4.5.9",
    "vue": "^3.2.25",
    "vue-router": "4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@capacitor/cli": "^3.6.0",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@firebase/rules-unit-testing": "^2.0.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vitejs/plugin-vue": "^2.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.4.1",
    "firebase-tools": "^10.5.0",
    "husky": "^7.0.0",
    "jest": "^27.0.0",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vite-plugin-pwa": "^0.12.0",
    "vue-tsc": "^0.29.8"
  }
